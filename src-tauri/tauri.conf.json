{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "yarn sveltekit:build",
        "beforeDevCommand": "yarn sveltekit:dev",
        "devPath": "http://localhost:5173",
        "distDir": "../build"
    },
    "package": {
        "productName": "D53 Launcher",
        "version": "0.0.5"
    },
    "tauri": {
        "allowlist": {
            "os": {
                "all": true
            },
            "dialog": {
                "all": true
            },
            "path": {
                "all": true
            },
            "shell": {
                "execute": true,
                "open": ".*"
            },
            "protocol": {
                "asset": true,
                "assetScope": [
                    "$APP/versions/*"
                ]
            },
            "fs": {
                "readFile": true,
                "writeFile": true,
                "readDir": true,
                "copyFile": true,
                "createDir": true,
                "renameFile": true,
                "scope": [
                    "$APP/preferences.json",
                    "$APP/wallets.json",
                    "$APP/minetest.mtlauncher.conf",
                    "$APP/minetest.merged.conf",
                    "$APP",
                    "$APP/versions",
                    "$APP/versions/*",
                    "$APP/tmp.zip"
                ]
            },
            "http": {
                "request": true,
                "scope": [
                    "https://servers.minetest.net/list",
                    "https://serverlist.mainnet.sh/list",
                    "https://github.com/minetest/district53/releases/download/*",
                    "https://api.github.com/repos/district53/minetest/releases",
                    "https://api.github.com/repos/district53/minetest/download/*",
                    "https://blog.minetest.net/feed.rss",
                    "https://content.minetest.net/api/*"
                ]
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "d53launcher",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": "default-src 'self' 'unsafe-eval' 'unsafe-inline'; font-src 'self' https://fonts.googleapis.com; img-src 'self' asset: https://asset.localhost https://blog.minetest.net https://content.minetest.net"
        },
        "updater": {
            "active": false
        },
        "windows": [{
            "fullscreen": false,
            "height": 768,
            "resizable": true,
            "title": "District 53 Launcher",
            "width": 1280
        }]
    }
}
